#!/bin/bash
echo ;
echo -e '----------------------	  --------------------------------------------- 	----------------------';
echo -e '	 ----- 	 Updating System and System Packages ';
echo -e '	 --------------------------------------------------------------------------------- 	';
sudo dnf upgrade --all --refresh -y;
echo -e '	 --------------------------------------------------------------------------------- 	';
sudo dnf upgrade --all -y;
echo -e '----------------------	  --------------------------------------------- 	----------------------';
echo ;
echo -e '----------------------	  --------------------------------------------- 	----------------------';
echo -e '	 ----- 	 Updating Flatpak Application and Packages ';
echo -e '	 --------------------------------------------------------------------------------- 	';
flatpak update --assumeyes;
echo -e '----------------------	  --------------------------------------------- 	----------------------';
echo ;
